{
  "name": "@hebo/auth",
  "version": "0.1.0",
  "private": true,
  "sideEffects": false,
  "engines": {
    "bun": "^1.3.6"
  },
  "type": "module",
  "scripts": {
    "prebuild": "bun run db generate",
    "build": "bun build src/index.ts --compile --minify-whitespace --minify-syntax --target=bun --outfile dist/server",
    "clean": "git clean -fdx -e '.env*' .",
    "db": "prisma",
    "predev": "[ -d ./src/generated ] || bun run db generate",
    "dev": "bun --hot src/index.ts | pino-pretty",
    "lint": "eslint .",
    "type-check": "tsc --noEmit",
    "prestart": "bun run build",
    "start": "./dist/server"
  },
  "dependencies": {
    "@bogeychan/elysia-logger": "catalog:",
    "@elysiajs/cors": "catalog:",
    "@elysiajs/opentelemetry": "catalog:",
    "@hebo/shared-api": "workspace:*",
    "@prisma/adapter-pg": "catalog:",
    "@prisma/client": "catalog:",
    "@upyo/core": "^0.4.0",
    "@upyo/smtp": "^0.4.0",
    "better-auth": "catalog:",
    "elysia": "catalog:",
    "pg": "catalog:"
  },
  "devDependencies": {
    "@hebo/typescript-config": "workspace:*",
    "@types/pg": "catalog:",
    "bun-types": "catalog:",
    "pino-pretty": "catalog:",
    "prisma": "catalog:",
    "typescript": "catalog:"
  }
}
