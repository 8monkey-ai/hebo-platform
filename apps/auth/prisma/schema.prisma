// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider   = "prisma-client"
  output     = "../src/generated/prisma"
  engineType = "client"
}

datasource db {
  provider = "postgresql"
  schemas  = ["auth"]
}

model users {
  id            String     @id @db.Text
  name          String
  email         String     @unique
  emailVerified Boolean    @default(false)
  image         String?
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
  sessions      sessions[]
  accounts      accounts[]
  apikeys       apikeys[]

  @@schema("auth")
}

model sessions {
  id        String   @id @db.Text
  userId    String   @db.Text
  token     String   @unique
  expiresAt DateTime
  ipAddress String?
  userAgent String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      users    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@schema("auth")
}

model accounts {
  id                    String    @id @db.Text
  userId                String    @db.Text
  accountId             String
  providerId            String
  accessToken           String?
  refreshToken          String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  idToken               String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt
  user                  users     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([providerId, accountId])
  @@index([userId])
  @@schema("auth")
}

model verifications {
  id         String   @id @db.Text
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@schema("auth")
}

model apikeys {
  id                  String    @id @db.Text
  name                String?
  start               String?
  prefix              String?
  key                 String
  userId              String    @db.Text
  refillInterval      Int?
  refillAmount        Int?
  lastRefillAt        DateTime?
  enabled             Boolean   @default(true)
  rateLimitEnabled    Boolean   @default(true)
  rateLimitTimeWindow Int?
  rateLimitMax        Int?
  requestCount        Int       @default(0)
  remaining           Int?
  lastRequest         DateTime?
  expiresAt           DateTime?
  createdAt           DateTime  @default(now())
  updatedAt           DateTime  @updatedAt
  permissions         String?
  metadata            Json?
  user                users     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@schema("auth")
}
