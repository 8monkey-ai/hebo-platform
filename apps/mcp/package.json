{
  "name": "@hebo/mcp",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "bun build src/index.ts --compile --minify-whitespace --minify-syntax --target=bun --outfile dist/server",
    "clean": "git clean -fdx -e '.env*' .",
    "dev": "bun --hot src/index.ts | pino-pretty",
    "lint": "eslint .",
    "type-check": "tsc --noEmit",
    "prestart": "bun run build",
    "start": "./dist/server"
  },
  "dependencies": {
    "@bogeychan/elysia-logger": "^0.1.10",
    "@elysiajs/opentelemetry": "^1.4.9",
    "@hebo/shared-api": "workspace:*",
    "@modelcontextprotocol/sdk": "^1.24.2",
    "@opentelemetry/exporter-trace-otlp-http": "^0.208.0",
    "@opentelemetry/sdk-trace-node": "^2.2.0",
    "elysia": "^1.4.9",
    "pino": "^9.8.0",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "bun-types": "^1.3.4",
    "pino-pretty": "^13.1.1"
  }
}
