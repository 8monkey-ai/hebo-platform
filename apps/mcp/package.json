{
  "name": "@hebo/mcp",
  "version": "0.2.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "bun build src/index.ts --compile --minify-whitespace --minify-syntax --target=bun --outfile dist/server",
    "clean": "git clean -fdx -e '.env*' .",
    "dev": "bun --hot src/index.ts | pino-pretty",
    "lint": "eslint .",
    "type-check": "tsc --noEmit",
    "prestart": "bun run build",
    "start": "./dist/server"
  },
  "dependencies": {
    "@bogeychan/elysia-logger": "catalog:",
    "@elysiajs/opentelemetry": "catalog:",
    "@hebo/shared-api": "workspace:*",
    "@modelcontextprotocol/sdk": "^1.26.0",
    "city-timezones": "^1.3.3",
    "countries-and-timezones": "^3.8.0",
    "elysia": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@hebo/typescript-config": "workspace:*",
    "@types/bun": "catalog:",
    "pino-pretty": "catalog:"
  }
}
