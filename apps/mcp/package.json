{
  "name": "@hebo/mcp",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "build:client": "mkdir -p dist/src && cp -a src/ui dist/src",
    "build:server": "bun build src/index.ts --compile --minify-whitespace --minify-syntax --target=bun --outfile dist/server",
    "build": "bun run build:server && bun run build:client && cp bunfig.toml dist/",
    "clean": "git clean -fdx -e '.env*' .",
    "dev": "bun --hot src/index.ts | pino-pretty",
    "lint": "eslint .",
    "type-check": "tsc --noEmit",
    "prestart": "bun run build",
    "start": "./dist/server"
  },
  "dependencies": {
    "@bogeychan/elysia-logger": "^0.1.10",
    "@elysiajs/static": "^1.4.7",
    "@modelcontextprotocol/sdk": "^1.24.2",
    "elysia": "^1.4.18",
    "pino": "^9.8.0",
    "react": "^19",
    "react-dom": "^19",
    "tailwindcss": "^4.1.11",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "bun-plugin-tailwind": "^0.1.2",
    "bun-types": "^1.3.1",
    "pino-pretty": "^13.1.1"
  }
}
