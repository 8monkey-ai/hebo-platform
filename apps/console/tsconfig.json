{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~console/*": ["./app/*"],
      "~api": ["../api/src/index.ts"],
      "~api/*": ["../api/src/*"],
      "~gateway": ["../gateway/src/index.ts"],
      "~gateway/*": ["../gateway/src/*"]
    },
    "rootDirs": [".", "./.react-router/types"],
    "types": ["vite/client", "mdx"],
    "verbatimModuleSyntax": true
  },
  "include": [
    "**/*",
    "**/.server/**/*",
    "**/.client/**/*",
    ".react-router/types/**/*"
  ]
}
