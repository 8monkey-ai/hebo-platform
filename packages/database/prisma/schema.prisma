// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider   = "prisma-client"
  output     = "../src/generated/prisma"
  engineType = "client"
}

datasource db {
  provider = "postgresql"
  schemas  = ["public", "auth"]
}

generator prismabox {
  provider                    = "prismabox"
  typeboxImportDependencyName = "elysia"
  typeboxImportVariableName   = "t"
  inputModel                  = true
  output                      = "../../../apps/api/src/generated/prismabox"
  additionalProperties        = false
}

model agents {
  /// @prismabox.hide
  id       String     @id @default(uuid(7)) @db.Uuid
  /// @prismabox.input.hide
  slug     String     @unique
  name     String
  /// @prismabox.input.hide
  branches branches[]

  // Common audit fields across entities
  /// @prismabox.input.hide
  created_by String
  /// @prismabox.input.hide
  created_at DateTime  @default(now())
  /// @prismabox.input.hide
  updated_by String
  /// @prismabox.input.hide
  updated_at DateTime  @updatedAt
  /// @prismabox.hide
  deleted_by String?
  /// @prismabox.hide
  deleted_at DateTime?

  @@schema("public")
}

model branches {
  /// @prismabox.hide
  id         String @id @default(uuid(7)) @db.Uuid
  /// @prismabox.input.hide
  slug       String
  /// @prismabox.input.hide
  agent_slug String
  name       String
  models     Json[] @default([])
  /// @prismabox.hide
  agent      agents @relation(fields: [agent_slug], references: [slug], onDelete: Cascade)

  // Common audit fields across entities
  /// @prismabox.input.hide
  created_by String
  /// @prismabox.input.hide
  created_at DateTime  @default(now())
  /// @prismabox.input.hide
  updated_by String
  /// @prismabox.input.hide
  updated_at DateTime  @updatedAt
  /// @prismabox.hide
  deleted_by String?
  /// @prismabox.hide
  deleted_at DateTime?

  @@unique([agent_slug, slug])
  @@schema("public")
}

model provider_configs {
  /// @prismabox.hide
  id            String @id @default(uuid(7)) @db.Uuid
  provider_slug String
  value         Json

  // Common audit fields across entities
  /// @prismabox.hide
  created_by String
  /// @prismabox.hide
  created_at DateTime  @default(now())
  /// @prismabox.hide
  updated_by String
  /// @prismabox.hide
  updated_at DateTime  @updatedAt
  /// @prismabox.hide
  deleted_by String?
  /// @prismabox.hide
  deleted_at DateTime?

  @@schema("public")
}

model users {
  id            String     @id @db.Text
  name          String
  email         String     @unique
  emailVerified Boolean    @default(false)
  image         String?
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
  sessions      sessions[]
  accounts      accounts[]
  apikeys       apikeys[]

  @@schema("auth")
}

model sessions {
  id        String   @id @db.Text
  userId    String   @db.Text
  token     String   @unique
  expiresAt DateTime
  ipAddress String?
  userAgent String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      users    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@schema("auth")
}

model accounts {
  id                    String    @id @db.Text
  userId                String    @db.Text
  accountId             String
  providerId            String
  accessToken           String?
  refreshToken          String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  idToken               String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt
  user                  users     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([providerId, accountId])
  @@index([userId])
  @@schema("auth")
}

model verifications {
  id         String   @id @db.Text
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@schema("auth")
}

model apikeys {
  id                  String    @id @db.Text
  name                String?
  start               String?
  prefix              String?
  key                 String
  userId              String    @db.Text
  refillInterval      Int?
  refillAmount        Int?
  lastRefillAt        DateTime?
  enabled             Boolean   @default(true)
  rateLimitEnabled    Boolean   @default(true)
  rateLimitTimeWindow Int?
  rateLimitMax        Int?
  requestCount        Int       @default(0)
  remaining           Int?
  lastRequest         DateTime?
  expiresAt           DateTime?
  createdAt           DateTime  @default(now())
  updatedAt           DateTime  @updatedAt
  permissions         String?
  metadata            Json?
  user                users     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@schema("auth")
}
